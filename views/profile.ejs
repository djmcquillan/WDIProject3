<div class="page-header">

    <h2 style="padding-top: 25px"><%= user.local.name || user.meetup.name %></h2>

    <a href="/logout" class="btn btn-default btn-sm">Logout</a>

</div>
<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <div class="well">

          <% if(user.meetup.id ) {%>
            <h3>Meetup User</h3>
          <% } else { %>
            <h3>Locally Stored User</h3>
          <% } %>

            <p>
                <strong>Name</strong>: <%= user.local.name || user.meetup.name %><br>
                <strong>Id</strong>:<span id="user_id"> <%= user._id %></span><br>
                <% if(user.local.email) {%>
                <strong>Email</strong>: <%} %> <%= user.local.email %><br>
                <strong>Location</strong>: <%= user.local.city +',' + user.local.state || user.meetup.city+','+ user.meetup.state %><br>
    
            </p>

          <% if(user._id){ %>
            <button type="button" id="delete_user">Delete Account</button>
          <% } %>
            <script>
            $("#delete_user").on('click',function(){
          		$.ajax({
          			url: "/profile",
          			method: 'DELETE',
          			success: function(data){
          				console.log("user deleted")
                  window.location.replace('/signup')
                }
              })
            })
          </script>
        </div>
    </div>
</div>
