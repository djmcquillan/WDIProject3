<div class="page-header">

    <h1><%= user.local.name || user.facebook.name %></h1>

    <a href="/logout" class="btn btn-default btn-sm">Logout</a>

</div>
<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <div class="well">
          <!-- /////////// Step 10 /////////// -->
          <% if(user.facebook.id ) {%>
            <h3>Facebook User</h3>
          <% } else { %>
            <h3>Locally Stored User</h3>
          <% } %>

            <p>
                <strong>Name</strong>: <%= user.local.name || user.facebook.name %><br>
                <strong>id</strong>: <%= user._id %><br>
                <strong>email</strong>: <%= user.local.email || user.facebook.email %><br>
                <% if(user.local.id){ %>
                  <strong>zip</strong>: <%= user.local.zip %><br>
                  <strong>password</strong>: <%= user.local.password %>
                <% } %>
            </p>
        <!-- /////////// End Step 10 /////////// -->
        </div>
    </div>
</div>
